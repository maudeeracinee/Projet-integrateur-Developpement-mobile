{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "attach",
        "name": "Attach to Nest (9229)",
        "port": 9229,
        "restart": true,
        "timeout": 30000,
        "skipFiles": ["<node_internals>/**"],
        "sourceMaps": true
      },
  
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Nest via ts-node",
        "runtimeExecutable": "node",
        "runtimeArgs": [
          "--inspect-brk",
          "-r",
          "ts-node/register",
          "-r",
          "tsconfig-paths/register"
        ],
        "program": "${workspaceFolder}/src/main.ts",
        "cwd": "${workspaceFolder}",
        "console": "integratedTerminal",
        "skipFiles": ["<node_internals>/**"],
        "sourceMaps": true
      }
    ]
  }
  